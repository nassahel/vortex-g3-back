generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String      @id @unique @default(cuid())
  Name        String?
  Description String?
  Stock       Int?
  Price       Float?
  Categories  Category    @relation(fields: [CategoryId], references: [id])
  CategoryId  String
  isDeleted   Boolean?    @default(false)
  OrderItem   OrderItem[]
}

model Category {
  id        String    @id @unique @default(cuid())
  Name      String?
  isDeleted Boolean?  @default(false)
  Products  Product[]
}

model Profile {
  id      String @id @unique @default(cuid())
  image   String
  address String
  dni     String
  user    User   @relation(fields: [userId], references: [id])
  userId  String @unique
}

model User {
  id        String   @id @unique @default(cuid())
  Name      String?
  email     String?  @unique
  rol       Rol?     @default(USER)
  password  String?
  isActive  Boolean? @default(true)
  isDeleted Boolean? @default(false)
  Orders    Order[]
  profile   Profile?
}

model Order {
  id          String      @id @unique @default(cuid())
  Items       OrderItem[]
  TotalAmount Float?
  User        User        @relation(fields: [UserId], references: [id])
  UserId      String
}

model OrderItem {
  id            String   @id @unique @default(cuid())
  Product       Product? @relation(fields: [productId], references: [id])
  Quantity      Int?
  PartialAmount Float?
  Order         Order?   @relation(fields: [orderId], references: [id])
  productId     String?
  orderId       String?
}

enum Rol {
  ADMIN
  USER
}
